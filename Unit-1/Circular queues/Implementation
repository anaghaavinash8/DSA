#include <stdio.h>
#define MAX 5

int cq[MAX];
int front = -1, rear = -1;

void insertElement() {
    int val;

    // Check overflow
    if ((front == 0 && rear == MAX - 1) || ((rear + 1) % MAX == front)) {
        printf("\nCircular Queue Overflow!\n");
        return;
    }

    printf("Enter value to insert: ");
    scanf("%d", &val);

    if (front == -1) {  
        front = rear = 0;
    } else {
        rear = (rear + 1) % MAX;
    }

    cq[rear] = val;
    printf("%d inserted.\n", val);
}

void deleteElement() {
    if (front == -1) {
        printf("\nCircular Queue Underflow! Queue is empty.\n");
        return;
    }

    printf("Deleted: %d\n", cq[front]);

    if (front == rear) {  
        front = rear = -1;  
    } else {
        front = (front + 1) % MAX;
    }
}

void display() {
    if (front == -1) {
        printf("\nCircular Queue is empty.\n");
        return;
    }

    printf("\nCircular Queue elements: ");
    int i = front;
    
    while (1) {
        printf("%d ", cq[i]);
        if (i == rear) break;
        i = (i + 1) % MAX;
    }
    printf("\n");
}

int main() {
    int choice;

    while (1) {
        printf("\n--- Circular Queue Menu ---\n");
        printf("1. Insert\n2. Delete\n3. Display\n4. Exit\n");
        printf("Enter choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1: insertElement(); break;
            case 2: deleteElement(); break;   // FIXED
            case 3: display(); break;
            case 4: return 0;
            default: printf("Invalid choice!\n");
        }
    }
}
